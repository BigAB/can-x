{
    "plugins": [
    "babel",
    "react",
    "jsx-a11y",
    "import"
    ],
  "extends": ["airbnb", "eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "rules": {
      "semi": 1,
      "react/prefer-stateless-function": 0,
      "react/require-default-props": 0,
      "import/prefer-default-export": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
